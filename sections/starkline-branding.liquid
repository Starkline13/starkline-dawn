{%- style -%}
:root {
  --stark-color-primary: #1A2A4A;
  --stark-color-secondary: #00B4D8;
  --stark-color-accent: #FFB703;
  --stark-bg-light: #F7F9FC;
  --stark-text-main: #111111;
  --stark-text-muted: #5A6475;
  --stark-border-soft: #DDE3EC;
  --stark-radius-lg: 18px;
  --stark-radius-xl: 26px;
  --stark-max-width: 1120px;
}

/* Limitamos estilos a este bloque */
#starkline-branding {
  background: var(--stark-bg-light);
  color: var(--stark-text-main);
  padding: 0;
}

#starkline-branding * {
  box-sizing: border-box;
}

#starkline-branding .container {
  width: 100%;
  max-width: var(--stark-max-width);
  margin: 0 auto;
  padding: 0 1.5rem;
}

/* HERO */
#starkline-branding .hero {
  padding: 2.8rem 0 2rem;
}

#starkline-branding .hero-grid {
  display: grid;
  grid-template-columns: minmax(0, 3fr) minmax(0, 2.4fr);
  gap: 2.5rem;
  align-items: center;
}

#starkline-branding .eyebrow {
  font-size: 0.85rem;
  font-weight: 600;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: var(--stark-color-secondary);
  margin-bottom: 0.75rem;
}

#starkline-branding .hero-title {
  font-family: "Poppins", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  font-size: clamp(2.1rem, 3vw, 2.7rem);
  line-height: 1.15;
  color: var(--stark-color-primary);
  margin-bottom: 1rem;
}

#starkline-branding .hero-title .highlight {
  color: var(--stark-color-secondary);
}

#starkline-branding .hero-text {
  color: var(--stark-text-muted);
  max-width: 34rem;
  margin-bottom: 1.4rem;
  font-size: 0.98rem;
}

#starkline-branding .hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 0.9rem;
  align-items: center;
  margin-bottom: 1.6rem;
}

#starkline-branding .btn-primary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.55rem 1.3rem;
  border-radius: 999px;
  border: none;
  cursor: pointer;
  background: var(--stark-color-accent);
  color: #1a1300;
  font-weight: 600;
  font-size: 0.9rem;
  box-shadow: 0 10px 25px rgba(255, 183, 3, 0.28);
  transition: transform 0.1s ease, box-shadow 0.1s ease, background 0.1s ease;
  white-space: nowrap;
}

#starkline-branding .btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 14px 32px rgba(255, 183, 3, 0.35);
  background: #ffca3a;
}

#starkline-branding .btn-ghost {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.55rem 1.1rem;
  border-radius: 999px;
  border: 1px solid var(--stark-border-soft);
  color: var(--stark-color-primary);
  background: rgba(255, 255, 255, 0.9);
  font-size: 0.9rem;
  cursor: pointer;
  transition: background 0.15s ease, border-color 0.15s ease, transform 0.1s ease;
}

#starkline-branding .btn-ghost:hover {
  background: #ffffff;
  border-color: var(--stark-color-secondary);
  transform: translateY(-1px);
}

#starkline-branding .hero-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 0.8rem;
  font-size: 0.82rem;
  color: var(--stark-text-muted);
}

#starkline-branding .badge {
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  padding: 0.35rem 0.7rem;
  border-radius: 999px;
  border: 1px solid rgba(221, 227, 236, 0.8);
  background: rgba(255, 255, 255, 0.9);
}

#starkline-branding .badge-dot {
  width: 8px;
  height: 8px;
  border-radius: 999px;
  background: var(--stark-color-secondary);
}

/* Hero card derecha */
#starkline-branding .hero-card {
  background: #ffffff;
  border-radius: var(--stark-radius-xl);
  box-shadow: 0 16px 40px rgba(4, 26, 55, 0.08);
  padding: 1.8rem 1.6rem;
  border: 1px solid rgba(221, 227, 236, 0.9);
}

#starkline-branding .hero-pill {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.3rem 0.7rem;
  border-radius: 999px;
  background: rgba(26, 42, 74, 0.04);
  color: var(--stark-color-primary);
  font-size: 0.78rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  margin-bottom: 1rem;
}

#starkline-branding .hero-mix {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 1.3rem;
}

#starkline-branding .hero-mix-row {
  display: flex;
  justify-content: space-between;
  gap: 0.7rem;
  font-size: 0.87rem;
}

#starkline-branding .hero-mix-block {
  flex: 1;
  padding: 0.85rem 0.9rem;
  border-radius: 16px;
  background: rgba(247, 249, 252, 0.95);
  border: 1px solid rgba(221, 227, 236, 0.9);
}

#starkline-branding .hero-mix-title {
  font-weight: 600;
  font-size: 0.86rem;
  margin-bottom: 0.25rem;
  color: var(--stark-color-primary);
}

#starkline-branding .hero-mix-text {
  color: var(--stark-text-muted);
  font-size: 0.8rem;
}

#starkline-branding .hero-divider {
  height: 1px;
  background: rgba(221, 227, 236, 0.85);
  margin: 0.8rem 0;
}

#starkline-branding .hero-checks {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.4rem 0.8rem;
  font-size: 0.8rem;
  color: var(--stark-text-muted);
}

#starkline-branding .hero-checks span {
  display: inline-flex;
  align-items: center;
  gap: 0.3rem;
}

#starkline-branding .check-dot {
  width: 14px;
  height: 14px;
  border-radius: 999px;
  background: rgba(0, 180, 216, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.7rem;
  color: var(--stark-color-secondary);
}

/* Secciones genéricas */
#starkline-branding section {
  padding: 2.2rem 0;
}

#starkline-branding .section-header {
  margin-bottom: 1.8rem;
  max-width: 40rem;
}

#starkline-branding .section-kicker {
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.13em;
  color: var(--stark-color-secondary);
  margin-bottom: 0.4rem;
  font-weight: 600;
}

#starkline-branding .section-title {
  font-family: "Poppins", system-ui, sans-serif;
  font-size: 1.5rem;
  color: var(--stark-color-primary);
  margin-bottom: 0.35rem;
}

#starkline-branding .section-subtitle {
  font-size: 0.95rem;
  color: var(--stark-text-muted);
}

/* Esencia */
#starkline-branding .essence-grid {
  display: grid;
  grid-template-columns: minmax(0, 1.6fr) minmax(0, 2fr);
  gap: 1.8rem;
  align-items: flex-start;
}

#starkline-branding .essence-card {
  background: #ffffff;
  border-radius: var(--stark-radius-lg);
  border: 1px solid var(--stark-border-soft);
  padding: 1.2rem 1.3rem;
  font-size: 0.9rem;
  box-shadow: 0 10px 30px rgba(4, 26, 55, 0.04);
}

#starkline-branding .essence-label {
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--stark-color-secondary);
  margin-bottom: 0.4rem;
}

#starkline-branding .essence-highlight {
  font-weight: 600;
  color: var(--stark-color-primary);
  margin-bottom: 0.3rem;
}

#starkline-branding .essence-quote {
  font-size: 0.9rem;
  color: var(--stark-text-muted);
  border-left: 3px solid var(--stark-color-secondary);
  padding-left: 0.9rem;
}

#starkline-branding .essence-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  margin-top: 0.7rem;
  font-size: 0.78rem;
}

#starkline-branding .pill {
  padding: 0.25rem 0.7rem;
  border-radius: 999px;
  border: 1px solid var(--stark-border-soft);
  background: rgba(247, 249, 252, 0.9);
  color: var(--stark-text-muted);
}

/* Buyer Personas */
#starkline-branding .personas-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 1.2rem;
}

#starkline-branding .persona-card {
  background: #ffffff;
  border-radius: var(--stark-radius-lg);
  padding: 1rem 1rem 1.1rem;
  border: 1px solid var(--stark-border-soft);
  font-size: 0.86rem;
  display: flex;
  flex-direction: column;
  gap: 0.55rem;
}

#starkline-branding .persona-tag {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--stark-color-secondary);
  font-weight: 600;
}

#starkline-branding .persona-name {
  font-weight: 600;
  color: var(--stark-color-primary);
}

#starkline-branding .persona-meta {
  font-size: 0.8rem;
  color: var(--stark-text-muted);
}

#starkline-branding .persona-block-title {
  font-weight: 600;
  color: var(--stark-color-primary);
  margin-bottom: 0.1rem;
  font-size: 0.8rem;
}

#starkline-branding .persona-list {
  list-style: none;
  padding-left: 0;
  margin: 0;
  color: var(--stark-text-muted);
  font-size: 0.8rem;
}

#starkline-branding .persona-list li + li {
  margin-top: 0.2rem;
}

/* Personalidad y voz */
#starkline-branding .split-grid {
  display: grid;
  grid-template-columns: minmax(0, 1.3fr) minmax(0, 1.7fr);
  gap: 1.6rem;
  align-items: flex-start;
}

#starkline-branding .card {
  background: #ffffff;
  border-radius: var(--stark-radius-lg);
  border: 1px solid var(--stark-border-soft);
  padding: 1.1rem 1.2rem;
  box-shadow: 0 10px 30px rgba(4, 26, 55, 0.03);
  font-size: 0.9rem;
}

#starkline-branding .card h3 {
  font-family: "Poppins", system-ui, sans-serif;
  font-size: 1.05rem;
  color: var(--stark-color-primary);
  margin-bottom: 0.5rem;
}

#starkline-branding .tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  margin-bottom: 0.6rem;
  font-size: 0.76rem;
}

#starkline-branding .tag {
  padding: 0.22rem 0.6rem;
  border-radius: 999px;
  background: rgba(0, 180, 216, 0.07);
  color: var(--stark-color-primary);
  border: 1px solid rgba(0, 180, 216, 0.25);
}

#starkline-branding .card ul {
  margin-left: 1.1rem;
  margin-top: 0.3rem;
  color: var(--stark-text-muted);
  font-size: 0.86rem;
}

#starkline-branding .card ul li + li {
  margin-top: 0.25rem;
}

#starkline-branding .example-box {
  margin-top: 0.6rem;
  padding: 0.7rem 0.8rem;
  border-radius: 12px;
  background: rgba(247, 249, 252, 0.9);
  border: 1px dashed var(--stark-border-soft);
  font-size: 0.85rem;
}

#starkline-branding .example-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--stark-color-secondary);
  margin-bottom: 0.25rem;
  font-weight: 600;
}

/* Identidad visual */
#starkline-branding .identity-grid {
  display: grid;
  grid-template-columns: minmax(0, 1.4fr) minmax(0, 1.8fr);
  gap: 1.5rem;
  align-items: flex-start;
}

#starkline-branding .swatches {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.7rem;
  margin-top: 0.7rem;
}

#starkline-branding .swatch {
  border-radius: 14px;
  overflow: hidden;
  border: 1px solid rgba(221,227,236,0.9);
  background: #ffffff;
}

#starkline-branding .swatch-color {
  height: 52px;
}

#starkline-branding .swatch-body {
  padding: 0.4rem 0.6rem 0.6rem;
  font-size: 0.78rem;
}

#starkline-branding .swatch-name {
  font-weight: 600;
  color: var(--stark-color-primary);
  margin-bottom: 0.1rem;
}

#starkline-branding .swatch-hex {
  font-size: 0.75rem;
  color: var(--stark-text-muted);
}

/* Logo demo */
#starkline-branding .logo-preview {
  background: #ffffff;
  border-radius: var(--stark-radius-lg);
  border: 1px solid var(--stark-border-soft);
  padding: 1.1rem 1.2rem 1.2rem;
}

#starkline-branding .logo-preview-title {
  font-family: "Poppins", system-ui, sans-serif;
  font-size: 0.98rem;
  color: var(--stark-color-primary);
  margin-bottom: 0.5rem;
  font-weight: 600;
}

#starkline-branding .logo-row {
  display: flex;
  align-items: center;
  gap: 1.2rem;
  flex-wrap: wrap;
}

#starkline-branding .logo-header-demo {
  background: var(--stark-bg-light);
  border-radius: 999px;
  padding: 0.5rem 0.9rem;
  display: inline-flex;
  align-items: center;
  gap: 0.7rem;
  border: 1px solid var(--stark-border-soft);
}

#starkline-branding .logo-mini-mark {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  background: var(--stark-color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

#starkline-branding .logo-mini-mark span {
  font-family: "Poppins", system-ui, sans-serif;
  font-weight: 700;
  color: #ffffff;
  font-size: 0.9rem;
  z-index: 2;
}

#starkline-branding .logo-mini-mark::before {
  content: "";
  position: absolute;
  width: 130%;
  height: 3px;
  background: var(--stark-color-secondary);
  transform: rotate(-28deg);
}

#starkline-branding .logo-header-text {
  font-family: "Poppins", system-ui, sans-serif;
  font-weight: 600;
  font-size: 1rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

#starkline-branding .logo-header-text span:first-child {
  color: var(--stark-color-primary);
}

#starkline-branding .logo-header-text span:last-child {
  color: var(--stark-color-secondary);
}

#starkline-branding .logo-header-text .underline {
  position: relative;
  display: inline-block;
  padding-bottom: 0.1rem;
}

#starkline-branding .logo-header-text .underline::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 2px;
  border-radius: 999px;
  background: var(--stark-color-accent);
}

#starkline-branding .logo-description {
  font-size: 0.83rem;
  color: var(--stark-text-muted);
  max-width: 18rem;
}

/* Checklist */
#starkline-branding .checklist-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 1.1rem;
  font-size: 0.86rem;
}

#starkline-branding .checklist-card {
  background: #ffffff;
  border-radius: var(--stark-radius-lg);
  border: 1px solid var(--stark-border-soft);
  padding: 0.9rem 1rem 1rem;
}

#starkline-branding .checklist-title {
  font-weight: 600;
  color: var(--stark-color-primary);
  margin-bottom: 0.4rem;
  font-size: 0.92rem;
}

#starkline-branding .checklist-card ul {
  margin-left: 1.1rem;
  color: var(--stark-text-muted);
  font-size: 0.84rem;
}

#starkline-branding .checklist-card ul li + li {
  margin-top: 0.2rem;
}

/* Responsive */
@media (max-width: 960px) {
  #starkline-branding .hero-grid,
  #starkline-branding .essence-grid,
  #starkline-branding .personas-grid,
  #starkline-branding .split-grid,
  #starkline-branding .identity-grid,
  #starkline-branding .checklist-grid {
    grid-template-columns: minmax(0, 1fr);
  }

  #starkline-branding .hero-card {
    order: -1;
  }
}

@media (max-width: 640px) {
  #starkline-branding .hero {
    padding-top: 2rem;
  }

  #starkline-branding .hero-card {
    padding: 1.4rem 1.3rem;
  }

  #starkline-branding .hero-grid {
    gap: 2rem;
  }
}
{%- endstyle -%}

